# ============================================
# STAKE DOWNLOADER - CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ===================
# GENERAL
# ===================
DEBUG=true
LOG_LEVEL=INFO

# ===================
# KICK CONFIGURATION
# ===================
KICK_CHANNELS=trainwreckstv,roshtein,xposed
KICK_WEBSOCKET_URL=wss://ws-us2.pusher.com/app/eb1d5f283081a78b932c

# ===================
# STAKE CONFIGURATION
# ===================
STAKE_API_URL=https://stake.com/_api/graphql
STAKE_WS_URL=wss://stake.com/_api/websocket
BIG_WIN_THRESHOLD=10000

# ===================
# DETECTION THRESHOLDS
# ===================
CHAT_VELOCITY_THRESHOLD=50
AUDIO_PEAK_THRESHOLD=-20
VIRALITY_SCORE_THRESHOLD=0.7

# ===================
# GEMINI AI (Required for AI features)
# ===================
# Get your API key at: https://aistudio.google.com/apikey
GEMINI_API_KEY=

# ===================
# VIDEO PROCESSING
# ===================
OUTPUT_DIR=./output
CLIPS_DIR=./clips
TEMP_DIR=./temp
VIDEO_FORMAT=mp4
VIDEO_CODEC=libx264
AUDIO_CODEC=aac
VERTICAL_WIDTH=1080
VERTICAL_HEIGHT=1920

# ===================
# WHISPER (Transcription)
# ===================
# Options: tiny (fast), base (balanced), small, medium, large (accurate)
WHISPER_MODEL=base

# ===================
# PROXIES (Optional)
# ===================
# USE_PROXIES=true
# PROXY_LIST_FILE=./proxies.txt
# PROXY_ROTATION_INTERVAL=60

# ===================
# SOCIAL MEDIA (Optional)
# ===================
# TIKTOK_SESSION_ID=your_session_id
# YOUTUBE_API_KEY=your_api_key
# YOUTUBE_CLIENT_SECRETS_FILE=./client_secrets.json
# INSTAGRAM_USERNAME=your_username
# INSTAGRAM_PASSWORD=your_password

# ===================
# SECURITY
# ===================
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
